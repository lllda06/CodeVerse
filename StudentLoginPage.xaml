<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyMauiApp.StudentLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">

    <Grid>
        <!-- Фон -->
        <Image
            Source="bg_waves.png"
            Aspect="AspectFill" />

        <!-- Контент -->
        <Grid Padding="24,40,24,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />  <!-- логотип -->
                <RowDefinition Height="*" />     <!-- иконка + поля + кнопка -->
                <RowDefinition Height="Auto" />  <!-- соц. иконки -->
            </Grid.RowDefinitions>

            <!-- Лого школы -->
            <Image
                Grid.Row="0"
                Source="zsm_logo.png"
                HorizontalOptions="End"
                HeightRequest="64"
                Margin="0,0,0,12" />

            <!-- Центр: логин ученика -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="12">

                    <Image
                        Source="student_icon.png"
                        HeightRequest="110"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        Margin="0,0,0,4" />

                    <Label
                        Text="Logowanie ucznia"
                        FontSize="20"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black" />

                    <Label
                        Text="Zaloguj się do swojej klasy w CodeVerse."
                        FontSize="13"
                        TextColor="#444"
                        HorizontalTextAlignment="Center"
                        Margin="0,0,0,10" />

                    <!-- ВАЖНО: имена для Entry -->
                    <Entry
                        x:Name="StudentLoginEmailEntry"
                        Placeholder="E-mail lub login"
                        FontSize="14"
                        Keyboard="Email"
                        TextColor="Black" />

                    <Entry
                        x:Name="StudentLoginPasswordEntry"
                        Placeholder="Hasło"
                        FontSize="14"
                        IsPassword="True"
                        TextColor="Black" />

                    <Button
                        Text="Zaloguj się"
                        Clicked="OnStudentLoginClicked"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="24"
                        HeightRequest="50"
                        Margin="0,8,0,0" />

                    <Label
                        Text="Nie masz konta? Zarejestruj się"
                        FontSize="12"
                        TextColor="#333"
                        HorizontalOptions="Center"
                        Margin="0,8,0,0">
                        <Label.GestureRecognizers>
                            <!-- обработчик перехода на регистрацию -->
                            <TapGestureRecognizer Tapped="OnGoToRegisterTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Соц. логин -->
            <VerticalStackLayout
                Grid.Row="2"
                Spacing="8"
                HorizontalOptions="Center"
                Margin="0,12,0,0">

                <Label
                    Text="Zaloguj się szybciej:"
                    FontSize="12"
                    TextColor="#555"
                    HorizontalOptions="Center" />

                <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                    <ImageButton Source="synergia_icon.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 BackgroundColor="Transparent"
                                 Clicked="OnSynergiaLoginClicked" />
                    <ImageButton Source="google_icon.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 BackgroundColor="Transparent"
                                 Clicked="OnGoogleLoginClicked" />
                    <ImageButton Source="facebook_icon.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 BackgroundColor="Transparent"
                                 Clicked="OnFacebookLoginClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>