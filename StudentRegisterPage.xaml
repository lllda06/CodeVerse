<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyMauiApp.StudentRegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">

    <Grid>
        <!-- Фон -->
        <Image
            Source="bg_waves.png"
            Aspect="AspectFill" />

        <!-- Контент -->
        <Grid Padding="24,40,24,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />  <!-- логотип -->
                <RowDefinition Height="*" />     <!-- форма -->
            </Grid.RowDefinitions>

            <!-- Лого -->
            <Image
                Grid.Row="0"
                Source="zsm_logo.png"
                HorizontalOptions="End"
                HeightRequest="64"
                Margin="0,0,0,12" />

            <!-- Форма регистрации -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="12">

                    <Label
                        Text="Rejestracja ucznia"
                        FontSize="20"
                        FontAttributes="Bold"
                        TextColor="Black"
                        HorizontalOptions="Center" />

                    <Label
                        Text="Załóż konto, aby mieć dostęp do kursów i zadań w CodeVerse."
                        FontSize="13"
                        TextColor="#444"
                        HorizontalTextAlignment="Center"
                        Margin="0,0,0,10" />

                    <!-- Имя -->
                    <Entry
                        x:Name="StudentNameEntry"
                        Placeholder="Imię"
                        FontSize="14"
                        TextColor="Black" />

                    <!-- Фамилия (пока без использования в коде, по желанию можно потом добавить) -->
                    <Entry
                        Placeholder="Nazwisko"
                        FontSize="14"
                        TextColor="Black" />

                    <!-- E-mail -->
                    <Entry
                        x:Name="StudentEmailEntry"
                        Placeholder="E-mail"
                        FontSize="14"
                        Keyboard="Email"
                        TextColor="Black" />

                    <!-- Пароль -->
                    <Entry
                        x:Name="StudentPasswordEntry"
                        Placeholder="Hasło"
                        FontSize="14"
                        IsPassword="True"
                        TextColor="Black" />

                    <!-- Повтор пароля (пока не проверяем в коде) -->
                    <Entry
                        Placeholder="Powtórz hasło"
                        FontSize="14"
                        IsPassword="True"
                        TextColor="Black" />

                    <!-- Код класса -->
                    <Entry
                        Placeholder="Kod klasy (od nauczyciela)"
                        FontSize="14"
                        TextColor="Black" />

                    <Button
                        Text="Zarejestruj się"
                        Clicked="OnStudentRegisterClicked"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="24"
                        HeightRequest="50"
                        Margin="0,10,0,0" />

                    <Label
                        Text="Masz już konto? Zaloguj się"
                        FontSize="12"
                        TextColor="#333"
                        HorizontalOptions="Center"
                        Margin="0,8,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGoToLoginTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>