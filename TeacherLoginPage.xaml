<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyMauiApp.TeacherLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">

    <Grid>
        <!-- ФОН -->
        <Image
            Source="bg_waves.png"
            Aspect="AspectFill" />

        <!-- КОНТЕНТ -->
        <Grid Padding="24,40,24,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />  <!-- логотип -->
                <RowDefinition Height="*" />     <!-- форма логина -->
                <RowDefinition Height="Auto" />  <!-- соц. логин -->
            </Grid.RowDefinitions>

            <!-- ЛОГОТИП ШКОЛЫ -->
            <Image
                Grid.Row="0"
                Source="zsm_logo.png"
                HorizontalOptions="End"
                HeightRequest="64"
                Margin="0,0,0,12" />

            <!-- ФОРМА ЛОГИНА УЧИТЕЛЯ -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Spacing="12">

                    <!-- ИКОНКА УЧИТЕЛЯ -->
                    <Image
                        Source="teacher_icon.png"
                        HeightRequest="110"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        Margin="0,0,0,4" />

                    <Label
                        Text="Kodowa Katedra"
                        FontSize="22"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="Black" />

                    <Label
                        Text="„Wejdź do panelu, w którym lekcje zamieniają się w misje, a zadania w wyzwania.”"
                        FontSize="13"
                        TextColor="#444"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        Margin="0,0,0,10" />

                    <!-- ПОЛЯ ВВОДА -->
                    <Entry
                        x:Name="TeacherLoginEmailEntry"
                        Placeholder="E-mail szkolny"
                        FontSize="14"
                        Keyboard="Email"
                        TextColor="Black" />

                    <Entry
                        x:Name="TeacherLoginPasswordEntry"
                        Placeholder="Hasło"
                        FontSize="14"
                        IsPassword="True"
                        TextColor="Black" />

                    <Entry
                        x:Name="TeacherCodeEntry"
                        Placeholder="Kod szkoły / kod nauczyciela (opcjonalnie)"
                        FontSize="14"
                        TextColor="Black" />

                    <!-- КНОПКА ЛОГИНА -->
                    <Button
                        Text="Zaloguj się"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="24"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        Clicked="OnTeacherLoginClicked" />

                    <!-- ЛИНК НА РЕГИСТРАЦИЮ -->
                    <Label
                        Text="Nie masz konta? Załóż konto nauczyciela"
                        FontSize="12"
                        TextColor="#333"
                        HorizontalOptions="Center"
                        Margin="0,8,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGoToRegisterTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </ScrollView>

            <!-- СОЦ. ЛОГИН -->
            <VerticalStackLayout
                Grid.Row="2"
                Spacing="8"
                HorizontalOptions="Center"
                Margin="0,16,0,0">

                <Label
                    Text="Zaloguj się szybciej:"
                    FontSize="12"
                    TextColor="#555"
                    HorizontalOptions="Center" />

                <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                    <ImageButton
                        Source="synergia_icon.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent" 
                        Clicked="OnSynergiaLoginClicked" />
                    <ImageButton
                        Source="google_icon.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent"
                        Clicked="OnGoogleLoginClicked" />
                    <ImageButton
                        Source="facebook_icon.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent" 
                        Clicked="OnFacebookLoginClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>