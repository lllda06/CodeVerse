<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyMauiApp.AuthPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">

    <Grid>
        <!-- Фон -->
        <Image
            Source="bg_waves.png"
            Aspect="AspectFill" />

        <!-- Контент -->
        <Grid Padding="24,40,24,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />  <!-- лого -->
                <RowDefinition Height="*" />     <!-- иконка + кнопки -->
                <RowDefinition Height="Auto" />  <!-- соц. иконки -->
                <RowDefinition Height="Auto" />  <!-- линк для учителя -->
            </Grid.RowDefinitions>

            <!-- Логотип школы -->
            <Image
                Grid.Row="0"
                Source="zsm_logo.png"
                HorizontalOptions="End"
                HeightRequest="64"
                Margin="0,0,0,12" />

            <!-- Блок для учеников -->
            <VerticalStackLayout
                Grid.Row="1"
                Spacing="18"
                VerticalOptions="Center">

                <!-- Иконка (можешь заменить на свою) -->
                <Image
                    Source="laptop_hat.png"
                    HeightRequest="120"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"
                    Margin="0,0,0,4" />

                <Label
                    Text="Panel ucznia"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="Black"
                    HorizontalOptions="Center" />

                <Label
                    Text="Wybierz, czy chcesz się zalogować, czy założyć konto w CodeVerse."
                    FontSize="13"
                    TextColor="#444"
                    HorizontalTextAlignment="Center"
                    LineBreakMode="WordWrap"
                    Margin="0,0,0,8" />

                <!-- Кнопка регистрации ученика -->
                <Button
                    Text="Zarejestruj się"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="24"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    Clicked="OnStudentRegisterClicked" />

                <!-- Кнопка логина ученика -->
                <Button
                    Text="Zaloguj się"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    BorderColor="Black"
                    BorderWidth="1"
                    CornerRadius="24"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    Clicked="OnStudentLoginClicked" />
            </VerticalStackLayout>

            <!-- Соц. логин -->
            <VerticalStackLayout
                Grid.Row="2"
                Spacing="8"
                HorizontalOptions="Center"
                Margin="0,16,0,0">

                <Label
                    Text="Zaloguj się szybciej:"
                    FontSize="12"
                    TextColor="#555"
                    HorizontalOptions="Center" />

                <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                    <ImageButton
                        Source="synergia_icon.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent"
                        Clicked="OnSynergiaLoginClicked" />
                    <ImageButton
                        Source="google_icon.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent" 
                        Clicked="OnGoogleLoginClicked" />
                    <ImageButton
                        Source="facebook_icon.png"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent" 
                        Clicked="OnFacebookLoginClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Линк для учителя -->
            <Label
                Grid.Row="3"
                Text="Jesteś nauczycielem? Zaloguj się tutaj"
                FontSize="12"
                TextColor="#333"
                HorizontalOptions="Center"
                Margin="0,16,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTeacherLoginTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </Grid>
</ContentPage>